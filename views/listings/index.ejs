<% layout("/layouts/boilerplate")%>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 24px;
    padding: 20px 0;
    border-bottom: 1px solid #ebebeb;
    margin-bottom: 32px;
  }
  .filter {
    text-align: center;
    opacity: 0.65;
    transition: all 0.2s ease;
    padding: 8px 12px;
    border-radius: 12px;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
    background-color: #f7f7f7;
  }
  .filter i {
    font-size: 24px;
    margin-bottom: 6px;
    display: block;
  }
  .filter p {
    font-size: 12px;
    font-weight: 600;
    margin: 0;
    color: #222222;
  }
  .filter.active {
    opacity: 1;
    border-bottom: 2px solid #222222;
    border-radius: 0;
  }
  .tax-info{
    display:none;
  }
  .tax-toggle{
    border: 1px solid #dddddd;
    border-radius: 12px;
    padding: 12px 16px;
    margin-left: auto;
    display: flex;
    align-items: center;
    background-color: white;
    transition: all 0.2s ease;
  }
  .tax-toggle:hover {
    border-color: #222222;
  }
  .form-check-label {
    font-size: 14px;
    font-weight: 500;
    margin-left: 8px;
  }
  .listing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 40px 24px;
    padding: 0;
  }
  @media (max-width: 768px) {
    .listing-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 32px 16px;
    }
  }
</style>
<div id="filters">
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>
   <div class="filter">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Domes</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-ship"></i></div>
    <p>Boats</p>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label
        class="form-check-label"
        for="switchCheckDefault"
        >Total after taxes</label
      >
    </div>
  </div>
</div>
<div class="listing-grid">
  <% for(let listing of allListings){%>
  <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="listing-card">
      <div style="position: relative; overflow: hidden; border-radius: 12px;">
        <img
          src="<%=listing.image.url %>"
          class="card-img-top"
          alt="<%=listing.title%>"
        />
        <div class="card-img-overlay"></div>
      </div>
      <div class="card-body">
        <p class="card-text" style="margin-bottom: 4px;">
          <b><%=listing.title%></b>
        </p>
        <p class="card-text" style="color: #717171; font-size: 14px; margin-bottom: 8px;">
          <%=listing.location%>, <%=listing.country%>
        </p>
        <p class="card-text" style="margin-bottom: 0;">
          <span style="font-weight: 600;">&#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %></span>
          <span style="color: #717171; font-weight: 400;"> / night</span>
          <span class="tax-info" style="color: #717171; font-size: 13px;">&nbsp;+18% GST</span>
        </p>
      </div>
    </div>
  </a>
  <%}%>
</div>

<script>
    let taxSwitch=document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let taxInfo=document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display!="inline"){
                info.style.display="inline";
            }else{
                info.style.display="none";
            }
        }
    })

</script>
